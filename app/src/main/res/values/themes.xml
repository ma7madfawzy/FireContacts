<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireContacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
<!--        used to enable shared elements animation -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.FireContacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FireContacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FireContacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>